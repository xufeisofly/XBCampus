<% enable_vue_support %>

<h1>Update your profile</h1>

<%= form_for(@user) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited the user from being created:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "昵称" %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :email, "邮箱" %>
    <%= form.text_field :email, id: :user_email %>
  </div>

   <div class="field">
    <%= form.label :password, "密码" %>
    <%= form.password_field :password, id: :user_password %>
  </div>

   <div class="field">
    <%= form.label :password_confirmation, "确认密码" %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmaiton %>
  </div>

  <div class="actions">
    <%= form.submit "保存设置", class: "btn btn-large btn-primary"%>   
  </div>
<% end %>

