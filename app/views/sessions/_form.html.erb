<%= form_with scope: :session, url: sessions_path, class: "form-horizontal", local: true do |form| %>



  <div class="form-group">
    <%= form.label :email, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= form.text_field :email, id: :session_email, class: "form-control" %>
    </div>
  </div>

   <div class="form-group">
    <%= form.label :password, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= form.password_field :password, id: :session_password, class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset4 col-sm-4">
      <%= form.submit "Sign in", class: "btn btn-large btn-primary"%> 
    </div>  
  </div>
<% end %>