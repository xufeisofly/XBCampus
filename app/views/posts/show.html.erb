<p id="notice"><%= notice %></p>

<p>
  <strong>Topic:</strong>
  <%= @post.topic %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<p>
  <%= @post.comments.count %>
</p>


<% @post.comments.each do |comment| %>
  <p>
    <%= comment.content %>
  </p>
<% end %>

<%= render 'comments/comment' %>