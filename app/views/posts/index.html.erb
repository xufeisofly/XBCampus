<% enable_vue_support %>

<div id="post-list">
  <li v-for="post in posts">
    <el-row>
      <el-col v-bind:span="6" class="post-category" v-bind:class="post.category">
        <span>{{ post.category }}</span>
      </el-col>
      <el-col v-bind:span="18">
        <el-card class="post-card">
          <h3>{{ post.topic }}</h3>
          <p>{{ post.content }}</p>
        </el-card>
      </el-col>
    </el-row>
  </li>
</div>

<script>
  var post_list = new Vue({
    el: '#post-list',
    data: {
      posts: []
    },
    created() {
      this.getPosts();
    },
    methods: {
      getPosts() {
        axios.get('/posts.json').then(response => {
          this.posts = response.data
        })
      }
    }
  })
</script>
